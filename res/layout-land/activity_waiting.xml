<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Waiting" 
    android:background="@drawable/castillo"
    android:gravity = "center">

    <com.ub.pis.views.CustomTextView
        android:id="@+id/waiting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="44dp"
        android:text="@string/waiting_text" 
        android:textSize="35sp"
        
        />

    <View
        android:id="@+id/bola1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@+id/waiting_text"
        android:layout_toRightOf="@+id/waiting_text"
        android:background="@drawable/bola"
        android:layout_marginLeft="14dp"
        android:gravity="center"
        android:textColor="#000000" />

    <View
        android:id="@+id/bola2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/bola1"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/bola1"
        android:background="@drawable/bola"
        android:gravity="center"
        android:textColor="#000000" />
    
    <View
        android:id="@+id/bola3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_above="@+id/progressBar1"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/bola2"
        android:background="@drawable/bola"
        android:gravity="center"
        android:textColor="#000000" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/waiting_text"
        android:layout_below="@+id/waiting_text"
        android:layout_marginLeft="40dp" 
        />



</RelativeLayout>